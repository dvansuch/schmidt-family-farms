.container
  .row-fluid
    .span12
      .main-content
        .well
          %center
            %h2 Customer Order Details
            %table{:class => "table table-condensed"}
              %tr
                %th
                %th{:colspan => 2} 
                  %center Customer 
                %th{:colspan => 11} 
                  %center Order
                %th{:colspan => 3}
              %tr
                %th Order Date
                %th First Name
                %th Last Name
                %th Whole Beef
                %th Half Beef
                %th Quarter Beef
                %th Whole Hog
                %th Half Hog
                %th BBQ Hog
                %th Chickens
                %th Lamb
                %th BBQ Pit
                %th Comments
                %th Total
                %th Paid?
                %th{:colspan => 3}
              - @orders.each do |farm_order|
                -if farm_order.is_paid == true
                  %tr{:class => "success"}
                    %td=farm_order.created_at
                    %td=farm_order.customer.first_name
                    %td=farm_order.customer.last_name
                    %td=farm_order.whole_beef
                    %td=farm_order.half_beef
                    %td=farm_order.qtr_beef
                    %td=farm_order.whole_hog
                    %td=farm_order.half_hog
                    %td=farm_order.bbq_hog
                    %td=farm_order.chickens
                    %td=farm_order.lamb
                    %td=farm_order.bbq_pit
                    %td=farm_order.comments
                    %td=farm_order.total
                    %td=farm_order.is_paid
                    %td= link_to 'Show', farm_order_path(farm_order)
                    %td= link_to 'Edit', edit_farm_order_path(farm_order)
                    %td= link_to 'Destroy', farm_order_path(farm_order), :method => :delete, :data => { :confirm => 'Are you sure?' }
                -else
                  %tr{:class => "error"}
                    %td=farm_order.created_at
                    %td=farm_order.customer.first_name
                    %td=farm_order.customer.last_name
                    %td=farm_order.whole_beef
                    %td=farm_order.half_beef
                    %td=farm_order.qtr_beef
                    %td=farm_order.whole_hog
                    %td=farm_order.half_hog
                    %td=farm_order.bbq_hog
                    %td=farm_order.chickens
                    %td=farm_order.lamb
                    %td=farm_order.bbq_pit
                    %td=farm_order.comments
                    %td=farm_order.total
                    %td=farm_order.is_paid
                    %td= link_to 'Show', farm_order_path(farm_order)
                    %td= link_to 'Edit', edit_farm_order_path(farm_order)
                    %td= link_to 'Destroy', farm_order_path(farm_order), :method => :delete, :data => { :confirm => 'Are you sure?' }
            %br

            = link_to 'New Order', new_farm_order_path(@order)
